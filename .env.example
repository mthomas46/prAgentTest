# Application
NODE_ENV=development
PORT=3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=<your-db-password>
DB_DATABASE=api
DB_NAME=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=<your-postgres-password>
POSTGRES_DB=taskdb
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_MULTIPLE_DATABASES=valhalla,webhook

# Database Connection String
DATABASE_URL=postgresql://postgres:<your-postgres-password>@postgres:5432/task_service

# Test Database
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_USERNAME=postgres
TEST_DB_PASSWORD=<your-test-db-password>
TEST_DB_DATABASE=hel

# JWT
JWT_SECRET=<your-jwt-secret-key>
JWT_EXPIRES_IN=1d

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_TIMESTAMP=true

# API Documentation
API_DOCS_URL=http://localhost:3000/api-docs

# Service URLs
TASK_SERVICE_URL=http://task-service:3000
VALKYRIE_URL=http://valkyrie:3005
SIGRUN_URL=http://sigrun:3006
BALDER_URL=http://balder:3002
HEIMDAL_URL=http://heimdal:3003

# Message Broker
RABBITMQ_URL=amqp://rabbitmq:5672

# Security Tokens
BROKKR_TOKEN=<your-brokkr-token>

# External Services
NGROK_AUTHTOKEN=<your-ngrok-auth-token>

# Monitoring
GF_SECURITY_ADMIN_PASSWORD=<your-grafana-admin-password> 