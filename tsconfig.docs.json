{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "src/public/js",
    "rootDir": "src/public/js",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": ["src/public/js/**/*.ts"],
  "exclude": ["node_modules"]
} 