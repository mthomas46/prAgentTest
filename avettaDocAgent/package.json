{
  "name": "avetta-doc-agent",
  "version": "1.0.0",
  "description": "Documentation agent for Avetta",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "start:dev": "ts-node-dev --respawn src/main.ts",
    "start:prod": "node dist/main.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint \"src/**/*.ts*\"",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.1.15",
    "@hono/node-server": "^1.8.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@octokit/rest": "^20.0.2",
    "ai": "^4.1.61",
    "dotenv": "^16.4.7",
    "hono": "^4.0.9",
    "openai": "^4.79.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "spinai": "^2.0.11",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.3.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.1",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.7.1",
    "typescript": "^5.1.3"
  }
}
