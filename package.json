{
  "name": "microservices-architecture",
  "version": "1.0.0",
  "description": "Microservices architecture with NestJS",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "preinstall": "node scripts/check-node-version.js",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix || true",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\" || true",
    "lint:ci": "eslint \"{src,apps,libs,test}/**/*.ts\" --max-warnings 0 || true",
    "type:check": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "test:fast": "jest --runInBand --no-cache",
    "test:watch": "jest --watch --passWithNoTests",
    "test:cov": "jest --coverage --passWithNoTests",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --passWithNoTests",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit",
    "test:docker": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit",
    "test:docker:clean": "docker-compose -f docker-compose.test.yml down -v",
    "prometheus:generate": "nest generate prometheus-metrics",
    "prepare": "husky install",
    "start:all": "concurrently \"npm run start:api-gateway\" \"npm run start:task-service\" \"npm run start:webhook-service\" \"npm run start:document-service\" \"npm run start:monitoring-service\"",
    "start:api-gateway": "cd services/api-gateway && npm run start:dev",
    "start:task-service": "cd services/task-service && npm run start:dev",
    "start:webhook-service": "cd services/webhook-service && npm run start:dev",
    "start:document-service": "cd services/document-service && npm run start:dev",
    "start:monitoring-service": "cd services/monitoring-service && npm run start:dev",
    "install:all": "npm install && cd services/api-gateway && npm install && cd ../task-service && npm install && cd ../webhook-service && npm install && cd ../document-service && npm install && cd ../monitoring-service && npm install",
    "build:all": "cd services/api-gateway && npm run build && cd ../task-service && npm run build && cd ../webhook-service && npm run build && cd ../document-service && npm run build && cd ../monitoring-service && npm run build",
    "test:all": "npm run test && npm run test:e2e",
    "lint:all": "cd services/api-gateway && npm run lint && cd ../task-service && npm run lint && cd ../webhook-service && npm run lint && cd ../document-service && npm run lint && cd ../monitoring-service && npm run lint",
    "test:api-gateway": "jest --selectProjects api-gateway --passWithNoTests",
    "test:task-service": "jest --selectProjects task-service --passWithNoTests",
    "test:logger-service": "jest --selectProjects logger-service --passWithNoTests",
    "test:event-service": "jest --selectProjects event-service --passWithNoTests",
    "test:all-services": "jest --passWithNoTests"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.0",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/microservices": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.17",
    "@nestjs/terminus": "^10.0.1",
    "@nestjs/typeorm": "^10.0.0",
    "@opentelemetry/api": "^1.9.0",
    "@willsoto/nestjs-prometheus": "^6.0.2",
    "ajv": "^8.12.0",
    "ajv-keywords": "^5.1.0",
    "axios": "^1.6.0",
    "cache-manager": "^6.4.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "helmet": "^7.2.0",
    "keyv": "^5.3.2",
    "pg": "^8.14.1",
    "prom-client": "^15.1.3",
    "reflect-metadata": "0.2.2",
    "rxjs": "^7.8.1",
    "semver": "7.7.1",
    "typeorm": "^0.3.20",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0",
    "winston-elasticsearch": "^0.19.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@types/supertest": "^6.0.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "sqlite3": "5.1.7",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
