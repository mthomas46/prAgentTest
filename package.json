{
  "name": "microservices-architecture",
  "version": "1.0.0",
  "description": "Microservices architecture with NestJS",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix || true",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\" || true",
    "lint:ci": "eslint \"{src,apps,libs,test}/**/*.ts\" --max-warnings 0 || true",
    "type:check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit",
    "test:docker": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit",
    "test:docker:clean": "docker-compose -f docker-compose.test.yml down -v",
    "prometheus:generate": "nest generate prometheus-metrics",
    "prepare": "husky install",
    "start:all": "concurrently \"npm run start:api-gateway\" \"npm run start:task-service\" \"npm run start:webhook-service\" \"npm run start:document-service\" \"npm run start:monitoring-service\"",
    "start:api-gateway": "cd services/api-gateway && npm run start:dev",
    "start:task-service": "cd services/task-service && npm run start:dev",
    "start:webhook-service": "cd services/webhook-service && npm run start:dev",
    "start:document-service": "cd services/document-service && npm run start:dev",
    "start:monitoring-service": "cd services/monitoring-service && npm run start:dev",
    "install:all": "npm install && cd services/api-gateway && npm install && cd ../task-service && npm install && cd ../webhook-service && npm install && cd ../document-service && npm install && cd ../monitoring-service && npm install",
    "build:all": "cd services/api-gateway && npm run build && cd ../task-service && npm run build && cd ../webhook-service && npm run build && cd ../document-service && npm run build && cd ../monitoring-service && npm run build",
    "test:all": "cd services/api-gateway && npm test && cd ../task-service && npm test && cd ../webhook-service && npm test && cd ../document-service && npm test && cd ../monitoring-service && npm test",
    "lint:all": "cd services/api-gateway && npm run lint && cd ../task-service && npm run lint && cd ../webhook-service && npm run lint && cd ../document-service && npm run lint && cd ../monitoring-service && npm run lint"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.0",
    "@nestjs/common": "11.0.12",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "11.0.12",
    "@nestjs/microservices": "11.0.12",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.17",
    "@nestjs/terminus": "^10.0.1",
    "@nestjs/typeorm": "10.0.2",
    "@willsoto/nestjs-prometheus": "^6.0.2",
    "axios": "^1.6.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "helmet": "^7.2.0",
    "pg": "8.14.1",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "sqlite3": "5.1.7",
    "typeorm": "0.3.21",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-proposal-decorators": "7.25.9",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.17",
    "@types/jest": "29.5.11",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dotenv": "^16.4.7",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "29.7.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.0.0",
    "node-libs-browser": "2.2.1",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "4.9.5",
    "url": "0.11.4",
    "concurrently": "^8.2.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
