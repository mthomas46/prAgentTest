{
  "name": "task-service",
  "version": "1.0.0",
  "description": "A simple task management service",
  "main": "dist/index.js",
  "scripts": {
    "build": "node scripts/check-node-version.js && tsc",
    "start": "node scripts/check-node-version.js && node dist/index.js",
    "dev": "node scripts/check-node-version.js && ts-node-dev --respawn src/index.ts",
    "test": "node scripts/check-node-version.js && jest",
