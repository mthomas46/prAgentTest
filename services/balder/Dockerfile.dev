FROM node:18-alpine

WORKDIR /usr/src/app

# Install dependencies
COPY package*.json ./
RUN npm install --legacy-peer-deps

# Install Elm
RUN apk add --no-cache curl
RUN curl -L -o elm.gz https://github.com/elm/compiler/releases/download/0.19.1/elm.gz
RUN gunzip elm.gz
RUN chmod +x elm
RUN mv elm /usr/local/bin/

# Install development dependencies
RUN npm install -g nodemon

# Copy source code
COPY . .

# Expose port
EXPOSE 3002

# Start development server
CMD ["npm", "run", "dev"] 